    "file-loader": "^6.2.0",
    "http-server": "^14.1.1",
    "mini-css-extract-plugin": "^2.7.5",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^8.5.1",
    "prettier": "^2.8.8",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.2",
    "webpack": "^5.82.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },

{
  "name": "local-first-extension",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:watch\" \"npm:server\"",
    "watch": "webpack --mode=development --watch --config config/webpack.config.js",
    "build": "webpack --mode=production --config config/webpack.config.js",
    "server": "node ./src/webrtc/server.mjs",
    "pack": "node pack.js",
    "repack": "npm run build && npm run pack",
    "format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\""
  },
  "devDependencies": {
    "adm-zip": "^0.5.10",
    "concurrently": "^8.0.1",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.3",
    "file-loader": "^6.2.0",
    "http-server": "^14.1.1",
    "mini-css-extract-plugin": "^2.7.5",
    "prettier": "^2.8.8",
    "webpack": "^5.82.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@ldflex/comunica": "^5.0.1",
    "@syncedstore/core": "^0.5.1",
    "byte-base64": "^1.1.0",
    "ldflex": "^2.15.2",
    "lib0": "^0.2.78",
    "querystring-es3": "^0.2.1",
    "rdflib": "^2.2.32",
    "stream-browserify": "^3.0.0",
    "url": "^0.11.0",
    "ws": "^8.13.0",
    "y-indexeddb": "^9.0.11",
    "y-webrtc": "^10.2.5",
    "yjs": "^13.6.1"
  }
}
